{
  "name": "richard4339/destiny2-php",
  "type": "library",
  "description": "PHP wrapper for the Destiny 2 API",
  "license": "MIT",
  "authors": [
    {
      "name": "Richard",
      "email": "richard@mozor.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "Destiny\\": "src/"
    }
  },
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "php-http/client-common": "^1.8 || ^1.9 || ^2.0 ",
    "php-http/discovery": "^1.5"
  },
  "require-dev": {
    "php-http/guzzle6-adapter": "^1.1 || ^2.0",
    "phpunit/phpunit": "^7",
    "phpdocumentor/phpdocumentor": "2.*",
    "php-coveralls/php-coveralls": "^2.1",
    "php-http/mock-client": "dev-master#04d48298bb0fab6cd1df03899b201d54fe0e34ce"
  },
  "scripts": {
    "test": "php vendor/phpunit/phpunit/phpunit -c phpunit.xml"
  },
  "suggest": {
    "php-http/guzzle6-adapter": "to have an adapter to actually make the HTTP calls",
    "php-http/httplug-bundle": "for use in Symfony"
  }
}
